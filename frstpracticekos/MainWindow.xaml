<Window x:Class="frstpracticekos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frstpracticekos"
        mc:Ignorable="d"
        Title="MiniConverterForPoor" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Базовая валюта:" Grid.Row="0"/>
        <TextBox x:Name="BaseCurrencyTextBox" Grid.Row="0" Margin="150,0,0,26" Grid.RowSpan="2"/>
        <Label Content="Целевая валюта:" Grid.Row="1"/>
        <TextBox x:Name="TargetCurrencyTextBox" Grid.Row="1" Margin="150,0,0,26" Grid.RowSpan="2"/>
        <Label Content="Сумма для конвертации:" Grid.Row="2"/>
        <TextBox x:Name="AmountTextBox" Grid.Row="2" Margin="150,0,0,30" Grid.RowSpan="2"/>
        <Button Content="Конвертировать" Click="ConvertButton_Click" Grid.Row="3" Margin="0,10,0,0"/>
        <Label x:Name="ConvertedAmountLabel" Content="" Grid.Row="4" Margin="0,10,0,0" HorizontalAlignment="Center"/>
    </Grid>
</Window>
